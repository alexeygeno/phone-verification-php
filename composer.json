{
  "name": "alexeygeno/phone-verification-php",
  "description":"A php package to verify a user via phone",
  "keywords":["otp","phone", "verification", "sms", "call", "2fa", "2factor","authentication"],
  "type":"library",
  "license":"MIT",
  "authors":[
    {
      "name":"Alexey Geno",
      "email": "alexeygeno@gmail.com",
      "homepage":"https://linkedin.com/in/alexeygeno"
    }
  ],
  "homepage": "https://github.com/alexeygeno/phone-verification-php",
  "autoload": {
    "psr-4": {
      "AlexGeno\\PhoneVerification\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AlexGeno\\PhoneVerificationTests\\": "tests/"
    }
  },
  "require":{
    "php":"^7.4",
    "predis/predis": "^2.1"
